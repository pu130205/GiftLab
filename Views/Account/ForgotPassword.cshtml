@model GiftLab.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700;800&display=swap" rel="stylesheet">

<style>
    .auth-container {
        font-family: 'Quicksand', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #fff6fa;
        padding: 20px;
    }

    .auth-card {
        display: flex;
        width: 1300px;
        height: 680px;
        max-width: 100%;
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(255, 111, 168, 0.15);
    }

    .auth-image-side {
        width: 50%;
        height: 100%;
        background-color: #ffeef5;
        position: relative;
        overflow: hidden;
    }

        .auth-image-side img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            transition: transform 0.6s ease;
        }

        .auth-image-side:hover img {
            transform: scale(1.03);
        }

    .auth-form-side {
        width: 40%;
        height: 100%;
        padding: 0 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 25px;
    }

    .auth-title {
        font-size: 34px;
        font-weight: 800;
        color: #f16480;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .auth-subtitle {
        color: #666;
        font-size: 15px;
        font-weight: 600;
        line-height: 1.5;
    }

    .form-group {
        margin-top: 20px;
        margin-bottom: 18px;
    }

    .form-label {
        display: block;
        margin-bottom: 10px;
        font-weight: 700;
        color: #444;
        font-size: 15px;
    }

    .form-control-custom {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #f0f0f0;
        border-radius: 12px;
        background: #fcfcfc;
        font-size: 15px;
        outline: none;
        transition: 0.3s;
        box-sizing: border-box;
        font-family: 'Quicksand', sans-serif;
    }

        .form-control-custom:focus {
            border-color: #f16480;
            background: white;
            box-shadow: 0 0 0 4px rgba(255, 111, 168, 0.1);
        }

    .btn-submit {
        width: 100%;
        padding: 18px;
        background: #f16480;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 17px;
        font-weight: 800;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 8px 20px rgba(255, 111, 168, 0.25);
        font-family: 'Quicksand', sans-serif;
        text-transform: uppercase;
        margin-top: 10px;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(255, 111, 168, 0.35);
        }

    .info-box {
        margin-top: 16px;
        padding: 12px 14px;
        border-radius: 12px;
        background: #fff5f8;
        color: #7a3b47;
        font-weight: 600;
        font-size: 14px;
        border: 1px solid rgba(241, 100, 128, 0.18);
    }

    .auth-footer {
        margin-top: 22px;
        text-align: center;
        font-size: 15px;
        color: #666;
        font-weight: 600;
    }

    .back-link {
        color: #f16480;
        font-weight: 800;
        text-decoration: none;
        margin-left: 6px;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    @@media (max-width: 992px) {
        .auth-card {
            flex-direction: column;
            width: 100%;
            height: auto;
        }

        .auth-image-side {
            width: 100%;
            height: 250px;
            flex: none;
        }

        .auth-form-side {
            width: 100%;
            height: auto;
            padding: 40px 20px;
            flex: none;
        }
    }
</style>

<div class="auth-container">
    <div class="auth-card">

        <div class="auth-image-side">
            <img src="~/images/login-bg.png" alt="GiftLab Forgot Password Banner">
        </div>

        <div class="auth-form-side">
            <div class="auth-header">
                <h2 class="auth-title">Quên mật khẩu</h2>
                <p class="auth-subtitle">
                    Nhập email bạn đã đăng ký. Nếu email tồn tại, GiftLab sẽ gửi hướng dẫn đặt lại mật khẩu 💌
                </p>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="info-box">@ViewBag.Message</div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Địa chỉ Email</label>
                    <input asp-for="Email" class="form-control-custom" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-submit">Gửi hướng dẫn</button>
            </form>

            <div class="auth-footer">
                Nhớ mật khẩu rồi?
                <a asp-controller="Account" asp-action="Login" class="back-link">Quay lại đăng nhập</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
