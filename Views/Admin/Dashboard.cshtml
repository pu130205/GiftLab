@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid p-4 p-lg-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Dashboard</h1>
            <p class="text-muted mb-0">Chào mừng trở lại! Đây là tổng quan hoạt động.</p>
        </div>
        <div class="d-flex gap-2">
            <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newItemModal">
                <i class="bi bi-plus-lg me-2"></i>
                Thêm mới
            </button> -->
            <button type="button" class="btn btn-outline-secondary"
                    data-bs-toggle="tooltip"
                    title="Làm mới dữ liệu">
                <i class="bi bi-arrow-clockwise icon-hover"></i>
            </button>
            <button type="button" class="btn btn-outline-secondary"
                    data-bs-toggle="tooltip"
                    title="Xuất dữ liệu">
                <i class="bi bi-download icon-hover"></i>
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-lg-6">
            <div class="card stats-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 text-muted">Tổng người dùng</h6>
                            <h3 class="mb-0" data-stat-value>1,426</h3>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +12.5%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="card stats-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-graph-up"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 text-muted">Doanh thu</h6>
                            <h3 class="mb-0">₫54,320,000</h3>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +8.2%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="card stats-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-bag-check"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 text-muted">Đơn hàng</h6>
                            <h3 class="mb-0">852</h3>
                            <small class="text-danger">
                                <i class="bi bi-arrow-down"></i> -2.1%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="card stats-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-clock-history"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 text-muted">Thời gian phản hồi</h6>
                            <h3 class="mb-0">2.3s</h3>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +5.4%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Tổng quan Doanh thu</h5>
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-primary active" data-chart-period="7d">7N</button>
                        <button type="button" class="btn btn-outline-primary" data-chart-period="30d">30N</button>
                        <button type="button" class="btn btn-outline-primary" data-chart-period="90d">90N</button>
                        <button type="button" class="btn btn-outline-primary" data-chart-period="1y">1N</button>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Hoạt động gần đây</h5>
                </div>
                <div class="card-body">
                    <div class="activity-feed">
                        <div class="activity-item">
                            <div class="activity-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-person-plus"></i>
                            </div>
                            <div class="activity-content">
                                <p class="mb-1">Người dùng mới đăng ký</p>
                                <small class="text-muted">2 phút trước</small>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-bag-check"></i>
                            </div>
                            <div class="activity-content">
                                <p class="mb-1">Đơn hàng #1234 đã hoàn thành</p>
                                <small class="text-muted">5 phút trước</small>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                            </div>
                            <div class="activity-content">
                                <p class="mb-1">Bảo trì hệ thống đã được lên lịch</p>
                                <small class="text-muted">1 giờ trước</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Charts Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Tăng trưởng người dùng (7 ngày qua)</h5>
                </div>
                <div class="card-body">
                    <canvas id="userGrowthChart" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Phân bố trạng thái đơn hàng</h5>
                </div>
                <div class="card-body">
                    <canvas id="orderStatusChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Đơn hàng gần đây</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Khách hàng</th>
                                    <th>Số tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày</th>
                                </tr>
                            </thead>
                            <tbody id="recent-orders-table">
                                <tr>
                                    <td><strong>#1001</strong></td>
                                    <td>Nguyễn Văn A</td>
                                    <td>₫350,000</td>
                                    <td><span class="badge bg-success">Hoàn thành</span></td>
                                    <td>15/01/2025</td>
                                </tr>
                                <tr>
                                    <td><strong>#1002</strong></td>
                                    <td>Trần Thị B</td>
                                    <td>₫520,000</td>
                                    <td><span class="badge bg-warning">Đang xử lý</span></td>
                                    <td>15/01/2025</td>
                                </tr>
                                <tr>
                                    <td><strong>#1003</strong></td>
                                    <td>Lê Văn C</td>
                                    <td>₫280,000</td>
                                    <td><span class="badge bg-info">Đã giao</span></td>
                                    <td>14/01/2025</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Storage Status -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Trạng thái lưu trữ</h5>
                </div>
                <div class="card-body">
                    <div id="storageStatusChart"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.44.0/dist/apexcharts.min.js"></script>
    <script src="~/admin/js/dashboard.js" asp-append-version="true"></script>
}